<?xml version="1.0" encoding="iso-8859-1"?>

<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://sma.uni.lu/d2cms/ws/_downloads/description.xsd">
    
    <program provider="RXMCDA" name="alternativesValuesKendall"
        displayName="alternativesValuesKendall" version="1.0" />
    <documentation>
        <description>Calculates the correlation index between two rankings of alternatives (represented by lists of ranks).</description>
        <contact>Patrick Meyer (patrick.meyer@telecom-bretagne.eu)</contact>
    </documentation>
    
    <parameters>
        
        <input id="alternatives" name="alternatives" displayName="alternatives"
            isoptional="0">
            
            <documentation>
                <description>A list of alternatives. Alternatives can be activated or desactivated via the &lt;active&gt; tag (true or false). By default (no &lt;active&gt; tag), alternatives are considered as active. </description>
            </documentation>
            <xmcda tag="alternatives">
                <![CDATA[
                    <alternatives>
                        <alternative>
                            <active>[...]</active>
                            [...]
                        </alternative>
                        [...]
                    </alternatives>
                    ]]>
            </xmcda>
        </input>
        
        <input id="alternativesValues1"
            name="alternativesValues1"
            displayName="alternativesValues"
            isoptional="0">
            <documentation><description>A list of &lt;alternativeValue&gt; in an &lt;alternativesValues&gt; containing the rank of each alternative. The &lt;value&gt; should be a numeric value.</description></documentation>
            <xmcda tag="alternativesValues"/>
        </input>
        
        <input id="alternativesValues2"
            name="alternativesValues2"
            displayName="alternativesValues"
            isoptional="0">
            <documentation><description>A list of &lt;alternativeValue&gt; in an &lt;alternativesValues&gt; containing the rank of each alternative. The &lt;value&gt; should be a numeric value.</description></documentation>
            <xmcda tag="alternativesValues"/>
        </input>    
        
        <output id="messages"
            name="messages"
            displayName="messages">
            
            <documentation>
                <description>A list of messages generated by the algorithm.</description>
            </documentation>
            <xmcda tag="methodMessages"/>
        </output>
        
        <output id="kendall-output"
            name="kendall"
            displayName="kendall">
            <documentation><description>An &lt;alternativeValue&gt; containing the Kendall correlation index of the two rankings of alternatives.</description></documentation>
            
            <xmcda tag="alternativeValue">
                <![CDATA[
                    <alternativeValue mcdaConcept="kendallCorrelation">
                        [...]
                    </alternativeValue>
                    ]]>
            </xmcda>
        </output>
        
    </parameters>
    
</program_description>



