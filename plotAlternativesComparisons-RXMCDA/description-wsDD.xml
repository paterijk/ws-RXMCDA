<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sma.uni.lu/d2cms/ws/_downloads/description.xsd">  <program provider="RXMCDA"
    name="plotAlternativesComparisons"
    displayName="plotAlternativesComparisons"
    version="1.0" />
    <documentation>
        <description>Generates a graph representing a partial preorder on the alternatives.</description>
        <contact>Patrick Meyer (patrick.meyer@telecom-bretagne.eu)</contact>
    </documentation>
    
    <parameters>
        
        <input id="cutLevel"
            name="cutLevel"
            displayName="cutLevel"
            isoptional="1">
            <documentation>
                <description>A real value indicating above which level the valued relation (comparisons) should be considered as validated.</description>
            </documentation>
            <xmcda tag="methodParameters">
                <![CDATA[
                    <methodParameters>
                        <parameter
                             name="cutLevel"><!-- REQUIRED  -->
                            <value>
                                <real>%1</real>
                            </value>
                        </parameter>
                    </methodParameters>
                    ]]>
            </xmcda>
            
            <gui status="preferGUI">
                <entry id="%1" type="float" displayName="cutLevel">
                    <documentation>
                        <description>A real value indicating above which level the valued relation (comparisons) should be considered as validated.</description>
                    </documentation>
                </entry>
            </gui>
        </input>
        
        
         <input id="alternatives" name="alternatives" displayName="alternatives"
            isoptional="0">
            
            <documentation>
                <description>A list of alternatives. Alternatives can be activated or desactivated via the &lt;active&gt; tag (true or false). By default (no &lt;active&gt; tag), alternatives are considered as active. </description>
            </documentation>
            <xmcda tag="alternatives">
                <![CDATA[
                    <alternatives>
                        <alternative>
                            <active>[...]</active>
                            [...]
                        </alternative>
                        [...]
                    </alternatives>
                    ]]>
            </xmcda>
        </input>
        
        <input id="alternativesComparisons"
            name="alternativesComparisons"
            displayName="alternativesComparisons"
            isoptional="0">
            
            <documentation>
                <description>A valued relation relative to comparisons of the alternatives. A numeric &lt;value&gt; indicates a the valuation for each &lt;pair&gt; of the relation.</description>
            </documentation>
            <xmcda tag="alternativesComparisons"/>
        </input>
        
        
        <output id="messages"
            name="messages"
            displayName="messages">
            
            <documentation>
                <description>A list of messages generated by the algorithm.</description>
            </documentation>
            <xmcda tag="methodMessages"/>
        </output>
        
        <output id="alternativesComparisonsPlot"
            name="alternativesComparisonsPlot"
            displayName="alternativesComparisonsPlot">
            <documentation>
                <description>A string containing the base64 representation of the png image of the graph generated by the R statistical software.</description>
            </documentation>
            <xmcda tag="alternativeValue"/>
            
        </output>
        
        
    </parameters>
</program_description>
