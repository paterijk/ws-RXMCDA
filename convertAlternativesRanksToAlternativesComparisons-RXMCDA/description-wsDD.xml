<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="/home/pat/Documents/currentResearch/DecisionDeck/svn-DecisionDeck/XMCDAWebServicesData/descriptionSchema/description.xsd">
    <program provider="RXMCDA"
        name="convertAlternativesRanksToAlternativesComparisons"
        displayName="convertAlternativesRanksToAlternativesComparisons"
        version="1.0" />
    <documentation>
        <description>Converts ranks of alternatives into alternatives comparisons.</description>
        <contact>Patrick Meyer (patrick.meyer@telecom-bretagne.eu)</contact>
    </documentation>
    
    
    <parameters>
        
        <input id="separationThreshold"
            name="separationThreshold"
            displayName="separationThreshold"
            isoptional="0">
            <documentation>
                <description>Indicates the separation threshold between two consecutive alternatives.</description>
            </documentation>
            <xmcda tag="methodParameters">
                <![CDATA[
                    <methodParameters>
                        <parameter
                             name="separationThreshold"> <!-- REQUIRED  -->
                            <value>
                                <integer>%1</integer>
                            </value>
                        </parameter>
                    </methodParameters>
                    ]]>
            </xmcda>
            
            <gui status="preferFile">
                <entry id="%1" type="int" displayName="separationThreshold">
                    <documentation>
                        <description>Indicates the separation threshold between two consecutive alternatives.</description>
                    </documentation>
                    <constraint>
                        <description>The value should be a positive float.</description>
                        <code>
                            <![CDATA[
                               %1 > 0
                            ]]>
                        </code>
                    </constraint>
                </entry>
            </gui>
        </input>
        
        <input id="alternatives" name="alternatives" displayName="alternatives"
            isoptional="0">
            
            <documentation>
                <description>A list of alternatives. Alternatives can be activated or desactivated via the &lt;active&gt; tag (true or false). By default (no &lt;active&gt; tag), alternatives are considered as active. </description>
            </documentation>
            <xmcda tag="alternatives">
                <![CDATA[
                    <alternatives>
                        <alternative>
                            <active>[...]</active>
                            [...]
                        </alternative>
                        [...]
                    </alternatives>
                    ]]>
            </xmcda>
        </input>
        
        <input id="alternativesRanks"
            name="alternativesRanks"
            displayName="alternativesRanks"
            isoptional="0">
            
            <documentation>
                <description>A list of alternatives ranks (numerical values). The best alternative has the highest rank. .</description>
            </documentation>
            <xmcda tag="alternativesValues">
                <![CDATA[
                    <alternativesValues mcdaConcept="alternativesRanks">
                        <alternativeValue>
                            [...]
                        </alternativeValue>
                        [...]
                    </alternativesValues>
                    ]]>
            </xmcda>
        </input>
        
        
        <output id="messages"
            name="messages"
            displayName="messages">
            
            <documentation>
                <description>A list of messages generated by the algorithm.</description>
            </documentation>
            <xmcda tag="methodMessages"/>
        </output>
        
        <output id="alternativesOrder"
            name="alternativesOrder"
            displayName="alternativesOrder">
            
            <documentation>
                <description>A valued relation relative to the preorder of the alternatives. A numeric &lt;value&gt; indicates a minimal preference threshold for each &lt;pair&gt; of the relation. One &lt;pair&gt; represents a constraint of the type "alternative a is preferred to alternative b with preference threshold delta".</description>
            </documentation>
            <xmcda tag="alternativesComparisons"/>
        </output>
        
    </parameters>
</program_description>

