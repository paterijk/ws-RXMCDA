<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sma.uni.lu/d2cms/ws/_downloads/description.xsd">  
    <program provider="RXMCDA"
        name="invertAlternativesRanks"
        displayName="invertAlternativesRanks"
        version="1.0" />
    <documentation>
        <description>Inverts ranks of alternatives (the highest rank becomes the lowest, etc.).</description>
        <contact>Patrick Meyer (patrick.meyer@telecom-bretagne.eu)</contact>
    </documentation>
    
    
    <parameters>
        
        <input id="alternatives" name="alternatives" displayName="alternatives"
            isoptional="0">
            
            <documentation>
                <description>A list of alternatives. Alternatives can be activated or desactivated via the &lt;active&gt; tag (true or false). By default (no &lt;active&gt; tag), alternatives are considered as active. </description>
            </documentation>
            <xmcda tag="alternatives">
                <![CDATA[
                    <alternatives>
                        <alternative>
                            <active>[...]</active>
                            [...]
                        </alternative>
                        [...]
                    </alternatives>
                    ]]>
            </xmcda>
        </input>
        
        <input id="alternativesValues"
            name="alternativesValues"
            isoptional="0"
            displayName="alternativesRanks">
            <documentation>
                <description>
                    A list of strictly positive integer &lt;alternativesValue&gt; representing the ranks of the alternatives.
                </description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </input>
        
        <output id="messages"
            name="messages"
            displayName="messages">
            
            <documentation>
                <description>A list of messages generated by the algorithm.</description>
            </documentation>
            <xmcda tag="methodMessages"/>
        </output>
        
        <output id="alternativesRanks"
            name="alternativesRanks"
            displayName="alternativesRanks">
            <documentation>
                <description>
                    A list of strictly positive integer &lt;alternativesValue&gt; representing the inverted ranks of the alternatives.
                </description>
            </documentation>
            <xmcda tag="alternativesValues"/>
        </output>
        
    </parameters>
</program_description>

